<?xml version="1.0"?>

<PropertyList>

  <path>MiG-15bis-Airspeedometer.ac</path> 

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>IAS_Glass</object-name>
  </effect>

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>30</max-m>
  </animation>

  <animation>
    <type>material</type>
    <object-name>IAS_Needle</object-name>
    <object-name>TAS_Needle</object-name>
    <object-name>IAS_Backplate</object-name>
    <emission>
      <factor-prop>systems/electrical-real/volts-norm</factor-prop>
      <red>0.222</red>
      <green>0.212</green>
      <blue>0.212</blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IAS_Needle</object-name>
    <property>fdm/jsbsim/systems/airspeedometer/indicated-kt</property>
    <factor>-0.66672</factor>
    <offset-deg>-0.65</offset-deg>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TAS_Needle</object-name>
    <property>fdm/jsbsim/velocities/vtrue-kts</property>
    <factor>-0.66672</factor>
    <offset-deg>35.5</offset-deg>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

</PropertyList> 
