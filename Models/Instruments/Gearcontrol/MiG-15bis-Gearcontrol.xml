<?xml version="1.0"?>

<PropertyList>

  <path>MiG-15bis-Gearcontrol.ac</path> 

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>30</max-m>
  </animation>

  <!--

<animation>
<type>material</type>
<object-name>GC_Base</object-name>
<object-name>GC_Fix</object-name>
<object-name>GC_Switch</object-name>
<object-name>GC_Bolts</object-name>
<object-name>GC_Up</object-name>
<object-name>GC_Down22</object-name>
<emission>
<factor-prop>systems/light/canopy-lamps-norm</factor-prop>
<red>0.777</red>
<green>0.700</green>
<blue>0.700</blue>
</emission>
<condition>
<equals>
<property>systems/light/use-canopy-lamps</property>
