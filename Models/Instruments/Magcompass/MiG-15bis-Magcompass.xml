<?xml version="1.0"?>

<PropertyList>

  <path>MiG-15bis-Magcompass.ac</path> 

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>MC_Glass</object-name>
  </effect>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>MC_Up</object-name>
  </effect>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>MC_Down</object-name>
  </effect>
  
  <animation>
    <type>select</type>
    <object-name>MC_Cylinder</object-name>
    <object-name>MC_Backplate</object-name>
    <object-name>MC_Box</object-name>
    <object-name>MC_Bezel</object-name>
    <object-name>MC_Bolts</object-name>
    <object-name>MC_Vernbase</object-name>
    <object-name>MC_Vern</object-name>
    <object-name>MC_Glass</object-name>
    <object-name>MC_Up</object-name>
    <object-name>MC_Down</object-name>
    <object-name>MC_Line</object-name>
    <object-name>MC_Blackpanel</object-name>
    <condition>
      <equals>
	<property>/sim/model/show_Magcompass</property>
	<value>1</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>30</max-m>
  </animation>

  <animation>
    <type>material</type>
    <object-name>MC_Cylinder</object-name>
    <object-name>MC_Backplate</object-name>
    <emission>
      <factor-prop>systems/electrical-real/volts-norm</factor-prop>
      <red>0.222</red>
      <green>0.212</green>
      <blue>0.212</blue>
    </emission>
  </animation>

  <!--
  <animation>
    <type>material</type>
    <object-name>MC_Cylinder</object-name>
    <object-name>MC_Backplate</object-name>
    <object-name>MC_Box</object-name>
    <object-name>MC_Bezel</object-name>
    <object-name>MC_Bolts</object-name>
    <object-name>MC_Vernbase</object-name>
    <object-name>MC_Vern</object-name>
    <emission>
      <factor-prop>systems/light/canopy-lamps-norm</factor-prop>
      <red>0.777</red>
      <green>0.700</green>
      <blue>0.700</blue>
    </emission>
    <condition>
      <equals>
        <property>systems/light/use-canopy-lamps</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>
  -->

  <animation>
    <type>rotate</type>
    <object-name>MC_Cylinder</object-name>
    <property>instrumentation/magnetic-compass/indicated-heading-deg</property>
    <center>
      <x-m>-0.003694</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>  
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>MC_Line</object-name>
    <property>instrumentation/magnetic-compass/offset</property>
    <center>
      <x-m>-0.003694</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>  
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>MC_Vern</object-name>
    <factor>10</factor>
    <property>instrumentation/magnetic-compass/offset</property>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0.031</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
	
  <animation>
    <type>pick</type>
    <object-name>MC_Vern</object-name>
    <action>
      <button>3</button>
      <repeatable>true</repeatable>
      <interval-sec>0.1</interval-sec>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/magnetic-compass/offset</property>
        <step>0.5</step>
        <min>-30.0</min>
        <max>30.0</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>true</repeatable>
      <interval-sec>0.1</interval-sec>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/magnetic-compass/offset</property>
        <step>-0.5</step>
        <min>-30.0</min>
        <max>30.0</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>MC_Vern</object-name>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <interval-sec>0.1</interval-sec>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/magnetic-compass/offset</property>
        <step>0.5</step>
        <min>-30.0</min>
        <max>30.0</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <action>
      <button>1</button>
      <repeatable>true</repeatable>
      <interval-sec>0.1</interval-sec>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/magnetic-compass/offset</property>
        <step>-0.5</step>
        <min>-30.0</min>
        <max>30.0</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

</PropertyList> 
