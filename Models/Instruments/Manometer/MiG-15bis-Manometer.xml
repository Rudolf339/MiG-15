<?xml version="1.0"?>

<PropertyList>

  <path>MiG-15bis-Manometer.ac</path> 

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>MAN_Glass</object-name>
  </effect>

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>30</max-m>
  </animation>

  <animation>
    <type>material</type>
    <object-name>MAN_NeedleOne</object-name>
    <object-name>MAN_NeedleTwo</object-name>
    <object-name>MAN_Backplate</object-name>
    <emission>
      <factor-prop>systems/electrical-real/volts-norm</factor-prop>
      <red>0.222</red>
      <green>0.212</green>
      <blue>0.212</blue>
    </emission>
  </animation>

  <!--

<animation>
<type>material</type>
<object-name>MAN_NeedleOne</object-name>
<object-name>MAN_NeedleTwo</object-name>
<object-name>MAN_Backplate</object-name>
<object-name>MAN_Bezel</object-name>
<emission>
