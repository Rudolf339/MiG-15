<?xml version="1.0"?>

<PropertyList>

  <path>MiG-15bis-Motpressmeter.ac</path> 

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>MP_Glass</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>MP_Needle</object-name>
    <object-name>MP_Backplate</object-name>
    <emission>
      <factor-prop>systems/electrical-real/outputs/engine_control/volts-norm</factor-prop>
      <red>0.222</red>
      <green>0.212</green>
      <blue>0.212</blue>
    </emission>
  </animation>

