  -->

  <animation>
    <type>rotate</type>
    <object-name>RC_Needle</object-name>
    <property>fdm/jsbsim/systems/radiocompass/degree</property>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

</PropertyList> 
