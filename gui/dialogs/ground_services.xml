<PropertyList>
	<name>ground_services</name>
	<layout>vbox</layout>

	<group>
		<layout>hbox</layout>
		<text>
			<halign>left</halign>
			<label>Ground services</label>
		</text>
		<button>
			<halign>right</halign>
			<pref-width>20</pref-width>
			<pref-height>20</pref-height>
			<legend>X</legend>
			<key>Esc</key>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>

	<group>
		<layout>hbox</layout>
		<checkbox>
			<live>true</live>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<property>/fdm/jsbsim/gear/wheel-chocks</property>
		</checkbox>
		<text>
			<label>Enable wheel chocks</label>
		</text>
	</group>
</PropertyList>
